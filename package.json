{
  "name": "@codaloy/codaloy",
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "dev": "astro dev --port 3000",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prebuild": "pnpm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf .next node_modules",
    "commitlint": "commitlint --edit",
    "db:check": "drizzle-kit check",
    "db:drop": "drizzle-kit drop",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/lib/db/migrate.ts",
    "db:pull": "drizzle-kit introspect",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
    "prepare": "husky",
    "pretty-quick": "pretty-quick"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pnpm run lint",
      "pnpm run format"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.20.0",
  "browserslist": "defaults, not ie <= 11",
  "dependencies": {
    "astro": "^5.15.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "commitlint": "^20.1.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codealoy/codealoy.git"
  },
  "bugs": {
    "url": "https://github.com/codealoy/codealoy/issues"
  },
  "homepage": "https://github.com/codealoy/codealoy#readme",
  "author": "Codealoy Team<team@codealoy.com>"
}
