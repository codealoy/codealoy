{
  "name": "@codaloy/codaloy",
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "dev": "astro dev --port 3000",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "preview:cloudflare": "wrangler dev",
    "astro": "astro",
    "prebuild": "pnpm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf node_modules .astro dist",
    "commitlint": "commitlint --edit",
    "db:check": "drizzle-kit check",
    "db:drop": "drizzle-kit drop",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/lib/db/migrate.ts",
    "db:pull": "drizzle-kit introspect",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
    "prepare": "husky",
    "pretty-quick": "pretty-quick"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pnpm run lint",
      "pnpm run format"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.23.0",
  "browserslist": "defaults, not ie <= 11",
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.11",
    "@astrojs/mdx": "^4.3.12",
    "@astrojs/react": "^4.4.2",
    "@fontsource-variable/baloo-da-2": "^5.2.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "^5.90.10",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "astro": "^5.16.0",
    "astro-seo": "^0.8.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "rehype-slug": "^6.0.0",
    "remark": "^15.0.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tailwindcss/typography": "^0.5.19",
    "commitlint": "^20.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "pretty-quick": "^4.2.2",
    "rimraf": "^6.1.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codealoy/codealoy.git"
  },
  "bugs": {
    "url": "https://github.com/codealoy/codealoy/issues"
  },
  "homepage": "https://github.com/codealoy/codealoy#readme",
  "author": "Codealoy Team<team@codealoy.com>"
}
