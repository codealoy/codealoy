---
import { getCollection, getEntry, render } from 'astro:content';
import DefaultLayout from '@/layouts/DefaultLayout.astro';

import { SITE_TITLE } from '@/config/site';

import MetaTags from '@/components/common/MetaTags.astro';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => {
    return data.status === 'published';
  });

  return blogPosts.map((post) => ({
    params: { slug: post.data.slug },
    props: { slug: post.data.slug },
  }));
}

const { slug } = Astro.props;

const post = await getEntry('blog', slug);

if (!post) {
  console.error(`❌ Blog post not found: ${slug}`);
  throw Astro.redirect('/404');
}

const { Content } = await render(post);

const pageTitle = `${post.data.title} | কোডালয় ব্লগ`;
const pageDescription = post.data.description;
---

<DefaultLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <article
    class="container mx-auto my-32 max-w-4xl px-4 py-12 md:max-w-5xl xl:max-w-6xl"
  >
    <header class="mb-8">
      {
        post.data.coverImage && (
          <div class="bg-muted mx-auto mb-8 aspect-auto w-full overflow-hidden rounded-lg shadow-2xl">
            <img
              src={post.data.coverImage}
              alt={post.data.title}
              class="h-full w-full object-cover"
            />
          </div>
        )
      }

      <h1 class="mt-20 text-3xl font-bold md:text-4xl">
        {post.data.title}
      </h1>

      {
        post.data.description && (
          <p class="text-muted-foreground my-6 text-base lg:text-xl">
            {post.data.description}
          </p>
        )
      }

      <div class="text-muted-foreground my-4 flex items-center gap-2 text-sm">
        <time datetime={post.data.publishedAt.toISOString()}>
          {
            new Intl.DateTimeFormat('bn-BD', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            }).format(post.data.publishedAt)
          }
        </time>
        {
          post.data.updatedAt && (
            <>
              <span>•</span>
              <span>
                আপডেট:{' '}
                {new Intl.DateTimeFormat('bn-BD', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                }).format(post.data.updatedAt)}
              </span>
            </>
          )
        }
        <span>•</span>
        <span>{post.data.author}</span>
      </div>

      {
        post.data.tags && post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {post.data.tags.map((tag) => (
              <span class="bg-muted text-muted-foreground rounded-full px-3 py-1 text-sm">
                {tag}
              </span>
            ))}
          </div>
        )
      }
    </header>
    <hr class="my-12 border-dashed" />

    <div
      class="prose prose-base lg:prose-lg dark:prose-invert prose-a:text-primary prose-a:no-underline prose-img:rounded-lg max-w-none"
    >
      <Content />
    </div>

    <footer class="border-border mt-12 border-t pt-8">
      <a
        href="/blog"
        class="text-primary inline-flex items-center gap-2 hover:underline"
      >
        ← সব ব্লগ পোস্ট
      </a>
    </footer>
  </article>
</DefaultLayout>
